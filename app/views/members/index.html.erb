

  <h1 class="text-left">Membros</h1>
  <%= render 'shared/index_table_top' %>
    <thead>
      <tr>
        <th onclick="sortTable(0)">Nome</th>
        <th onclick="sortTable(1)">Email</th>
        <th onclick="sortTable(1)">Celular</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody id="dados_tabela">
      <% @admins.each do |admin| %>
        <tr>
          <td class="align-middle"><%= admin.name %></td>
          <td class="align-middle"><%= admin.email %></td>
          <td class="align-middle"><%= admin.cel %></td>
          <td>
          	<%= link_to show_admin_path(admin.id) do %>
          	 <button class="btn btn-info">Visualizar</button>
          	<% end %>
          </td>
          <td>
            <%= link_to delete_admin_path(admin.id), method: :delete, data: { confirm: 'Tem certeza?' } do %>
          	 <button class="btn btn-danger">Remover</button>
          	<% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <%= render 'shared/index_table_bottom' %>
</div>
