<%= render 'shared/index_superior' %>

<h1>Membros</h1>

<%= render 'shared/index_table_top' %>
  <thead>
    <tr>
      <th onclick="sortTable(0)">Nome</th>
      <th onclick="sortTable(1)">Email</th>
      <th onclick="sortTable(1)">Celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="dados_tabela">
    <% @admins.each do |admin| %>
      <tr>
        <td class="align-middle">
        	<% if admin.name.nil? %>
        		Não Informado
        	<% else %>
        		<%= admin.name %>
    			<% end %>
        </td>
        <td class="align-middle"><%= admin.email %></td>
        <td class="align-middle">
        	<% if admin.cel.nil? %>
        		Não Informado
        	<% else %>
        		<%= admin.name %>
    			<% end %>
        </td>
        <td>
        	<%= link_to show_admin_path(admin.id) do %>
        		<button class="btn btn-info">Ver</button>
        	<% end %>
        	<%# link_to 'Ver', mostrar_admin_path(admin.id) %></td>
        <td><%= link_to delete_admin_path(admin.id), method: :delete, data: { confirm: 'Tem certeza?' } do %>
        	<button class="btn btn-danger">Remover</button>
        	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
<%= render 'shared/index_table_bottom' %>

